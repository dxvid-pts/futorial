<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24373E"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="de.davepe.futorial.LoadingActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/logo_vec" />

    <TextView
        android:id="@+id/infoOffline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:text="Du bist offline."
        android:textColor="#DDDDDD"
        android:textSize="17dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonOffline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button"
        android:padding="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Erneut Versuchen"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/checkBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
</LinearLayout>
